<div class="row px-2 py-2">
  <div class="col-sm-2">
    <ul class="nav nav-pills flex-column">
      <li class="nav-item">
        <a class="h5 nav-link disabled" tabindex="-1" aria-disable="true">老闆管理</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="manager">庫存管理</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="saleRank">業績查詢與商品排行</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="monlyReport">月報表</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">商品資料編輯</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="errorfix">錯誤班表修正</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="record">交班紀錄查詢</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">回使用者頁面</a>
      </li>
    </ul>
  </div>
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-8">
        <p class="h5">商品編輯</p>
        <div class="d-flex justify-content-center">
          <label for="selectstore" class="form-label col-sm-3">選擇分店</label>
          <select class="form-select" name="store" id="store" aria-label="select example1">
            <option selected>選擇分店</option>
          </select>
        </div>
      </div>
      <div class="col-sm-4 d-flex align-items-center">
        <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#staticBackdrop">新增</button>
        <button class="btn btn-light">儲存</button>
      </div>
    </div>
    <div class="row">
      <table class="table table-light table-stript table-hover text-center">
        <thead>
          <tr>
            <th>編號</th>
            <th>類型</th>
            <th>名稱</th>
            <th>進價</th>
            <th>售價</th>
            <th>單位</th>
            <th>進貨單位</th>
            <th>是否使用</th>
          </tr>
        </thead>
        <tbody id="checkUse">
          {{#each items}}
          <tr id="{{this.id}}">
            <td>{{this.id}}</td>
            <td>{{this.category}}</td>
            <td>{{this.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.price}}</td>
            <td>{{this.inbound_unit}}</td>
            <td>{{this.inbound_unit_count}}</td>
            <td><input class="form-check-input" type="checkbox" {{bindAttr checked="use_yn" }}>
              <label class="form-check-label" for="flexCheckDefault">
                使用
              </label>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="modal fade modal-lg" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">新增商品</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="add_new">
          <form action="itemData" method="POST">
            <table class="table table-light table-stript table-hover text-center">
              <thead>
                <tr>
                  <th>店家</th>
                  <th>類型</th>
                  <th>名稱</th>
                  <th>進價</th>
                  <th>售價</th>
                  <th>單位</th>
                  <th>進貨單位</th>
                </tr>
              </thead>
              <tbody>
                
                <tr>
                  <td>
                    <select name="store" id="store1" class="form-control">
                    </select>
                  </td>
                  <td>
                    <select name="category" id="" class="form-control">
                      <option value="檳榔">檳榔</option>
                      <option value="香菸">香菸</option>
                      <option value="飲料">飲料</option>
                    </select>
                  </td>
                  <td><input type="text" class="form-control" name="item_name"></td>
                  <td><input type="number" class="form-control" name="cost"></td>
                  <td><input type="number" class="form-control" name="price"></td>
                  <td><input type="text" class="form-control" name="unit"></td>
                  <td><input type="number" class="form-control" name="unit_count"></td>
                </tr>
              </tbody>
            </table>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
              <button class="btn btn-primary" type="submit" id="addvalue">送出</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="../js/itemData.js"></script>